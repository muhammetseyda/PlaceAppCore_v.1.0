        font-family: Arial, sans-serif;
    }

    .weather-icon {
        width: 100px;
        height: 100px;
    }

    .weather-info {
        text-align: left;
        margin-left: 20px;
    }

    .location {
        font-size: 1.5em;
        font-weight: bold;
    }

