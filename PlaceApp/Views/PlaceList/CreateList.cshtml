@model PlaceApp.Models.PlaceListViewModel

<h2>Yeni Liste Oluştur</h2>

<form asp-action="CreateList" method="post">
    <div hidden>
        <input id="Id" name="Id" />
        <input id="CreatedDate" name="CreatedDate" />
        <input id="UpdateDate" name="UpdateDate" />
    </div>
    <div class="form-group">
        <label for="ListName">Liste Adı</label>
        <input type="text" class="form-control" id="ListName" name="ListName" required>
    </div>
    <div class="form-group">
        <label for="ListDescription">Liste Açıklama</label>
        <textarea class="form-control" id="ListDescription" name="ListDescription"></textarea>
    </div>
    <div class="form-group">
        <label>Eklemek İstediğiniz Mekanlar</label>
        @if (Model.Places != null)
        {
            @foreach (var place in Model.Places)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="place-@place.Id" name="SelectedPlaceIds" value="@place.Id">
                    <label class="form-check-label" for="place-@place.Id">
                        @place.Name
                    </label>
                </div>
            }
        }
        else
        {
            <p>Mekanlar Yüklenemedi</p>
        }

    </div>
    <button type="submit" class="btn btn-primary">Liste Oluştur</button>
</form>
