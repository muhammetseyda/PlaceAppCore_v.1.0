<div>
    <label for="filterSelect">Filter:</label>
    <select id="filterSelect">
        <option value="category">Category</option>
        <option value="city">City</option>
        <option value="town">Town</option>
    </select>
</div>

<div id="filterOptions" style="display: none;">
    <!-- İç içe açılan seçenekler burada yer alacak -->
</div>



<script>
           const filterSelect = document.getElementById('filterSelect');
    const filterOptions = document.getElementById('filterOptions');

    filterSelect.addEventListener('change', function () {
        const selectedValue = this.value;

        // İç içe açılan seçenekleri temizle
        filterOptions.innerHTML = '';

        // Seçilen değere göre iç içe açılan seçenekleri oluştur
        if (selectedValue === 'category') {
            const categorySelect = document.createElement('select');
            categorySelect.id = 'categorySelect';
            categorySelect.innerHTML = '<option>Select a Category</option>' +
                '<option>Category 1</option>' +
                '<option>Category 2</option>' +
                '<option>Category 3</option>';
            filterOptions.appendChild(categorySelect);
        } else if (selectedValue === 'city') {
            const citySelect = document.createElement('select');
            citySelect.id = 'citySelect';
            citySelect.innerHTML = '<option>Select a City</option>' +
                '<option>City 1</option>' +
                '<option>City 2</option>' +
                '<option>City 3</option>';
            filterOptions.appendChild(citySelect);
        } else if (selectedValue === 'town') {
            const townSelect = document.createElement('select');
            townSelect.id = 'townSelect';
            townSelect.innerHTML = '<option>Select a Town</option>' +
                '<option>Town 1</option>' +
                '<option>Town 2</option>' +
                '<option>Town 3</option>';
            filterOptions.appendChild(townSelect);
        }

        // İç içe açılan seçenekleri görünür hale getir
        filterOptions.style.display = 'block';
    });

</script>

