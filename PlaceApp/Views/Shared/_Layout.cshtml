<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PlaceApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PlaceApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-toast-plugin/1.3.2/jquery.toast.min.css">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">

</head>
<body>
    <header>
            
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <div class="d-flex align-items-center">
                    <a class="navbar-brand" href="/Home/Index">PlaceApp</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
               @*  <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                    </ul>
                </div> *@
                <div class="form-group d-flex justify-content-center">
                    <form class="form-inline" asp-controller="Place" asp-action="Index" method="post">
                        <div class="input-group">
                            <input type="text" class="form-control" id="search" name="search" placeholder="Place, City, Town, Category">
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="submit">Search</button>
                            </div>
                        </div>
                    </form>
                </div>

                @if (User.Identity.IsAuthenticated)
                {
                    <div class="form-group text-center">
                       @*  <form method="post" asp-controller="Account" asp-action="Logout" class="d-inline">
                            <button type="submit" class="btn btn-danger">Çıkış Yap</button>
                        </form> *@

                        @* <a asp-controller="Profile" asp-action="Details" asp-route-username="@User.Identity.Name" class="d-inline ml-3"> *@
                        @* </a> *@

                        <div class="dropdown">
                            <a class="btn dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fa-solid fa-user fa-2xl"></i>
                            </a>

                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                <a class="dropdown-item" asp-controller="Profile" asp-action="Details" asp-route-username="@User.Identity.Name">Profile</a>
                                <a class="dropdown-item" asp-controller="Place" asp-action="Index">My Places</a>
                                <a class="dropdown-item" asp-controller="PlaceList" asp-action="Index">My Lists</a>
                                <a class="dropdown-item" asp-controller="Share" asp-action="Place">My SharedPlace</a>
                                <a class="dropdown-item" asp-controller="Share" asp-action="PlaceList">My SharedPlaceList</a>
                                <a class="dropdown-item" href="/Account/Logout" onclick="event.preventDefault(); document.getElementById('logout-form').submit();">Çıkış Yap</a>
                                <form id="logout-form" method="post" asp-controller="Account" asp-action="Logout" class="d-none">
                                    <button type="submit" class="btn btn-danger">Çıkış</button>
                                </form>

                            </div>
                        </div>
                    </div>
                        

                }
                else
                {
                    <div class="text-center">
                        <a asp-controller="Account" asp-action="Register" class="btn btn-success btn-block">Üye Ol</a>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-block">Giriş Yap</a>
                    </div>
                }
                
            </div>
        </nav>
    </header>

    <div class="container">
        <div class="row">
            <!-- Ana içerik alanı -->
            <div id="content" style="text-align: left;">
                <main role="main" class="col-md-9 ms-sm-auto col-lg-10 px-md-4 mx-auto">
                    @RenderBody()
                </main>
            </div>
            <!-- Ana içerik alanı sonu -->
        </div>
    </div>

@*     <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - PlaceApp - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>
 *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-toast-plugin/1.3.2/jquery.toast.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>